    <main class="container mx-auto px-4 sm:px-6 py-8">
        <div class="max-w-full mx-auto">
            <div class="mb-8">
                <div class="flex items-center justify-between mb-4">
                    <div>
                        <h2 class="text-3xl font-bold text-gray-900">
                            <%= product.name %>
                        </h2>
                        <p class="text-gray-600">
                            <%= product.description %>
                        </p>
                    </div>
                </div>
            </div>


            <div id="releases-container" class="space-y-6">
                <% releases.forEach(release=> { %>
                    <div class="bg-white rounded-lg shadow-sm p-6">
                        <div class="flex items-center justify-between mb-4">
                            <h2 class="text-xl font-semibold text-gray-900">
                                Version <%= release.version %>
                            </h2>
                            <span class="text-gray-500 text-sm">
                                <%= new Date(release.release_date).toLocaleDateString('en-US', { year: 'numeric' ,
                                    month: 'long' , day: 'numeric' }) %>
                            </span>
                        </div>

                        <div class="space-y-2">
                            <% if (release.features && release.features.length> 0) { %>
                                <ul class="list-disc list-inside space-y-2 text-gray-600 ml-2">
                                    <% release.features.forEach(feature=> { %>
                                        <li class="text-base">
                                            <%= feature.title %>
                                        </li>
                                        <% }); %>
                                </ul>
                                <% } else { %>
                                    <p class="text-gray-500 italic">No features listed for this release.</p>
                                    <% } %>
                        </div>

                        <div class="mt-6">
                            <a href="/releases/<%= product.slug %>/<%= release.version %>"
                                class="inline-flex items-center text-sm font-medium text-primary-600 hover:text-primary-700">
                                View full release
                                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M9 5l7 7-7 7" />
                                </svg>
                            </a>
                        </div>
                    </div>
                    <% }); %>
            </div>
        </div>
    </main>

